{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": false,
    "noUnusedParameters": true,
    "module": "commonjs",
    "lib": ["es2015", "dom", "dom.iterable"],
    "typeRoots": [
      "../../@types",
      "../../node_modules/@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/**/*", "src/**/__mocks__/**/*"]
}
