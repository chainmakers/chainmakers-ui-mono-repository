{
  "compilerOptions": {
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom"],
    "target": "es6"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/**/*", "src/**/__mocks__/**/*"]
}
