{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/**/*", "src/**/__mocks__/**/*"]
}
